<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1"
    tools:context=".MainActivity">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:background="@drawable/runded_bars"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="50dp"
    android:layout_marginStart="50dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:alpha=".5"
    android:elevation="100dp"
    android:outlineProvider="none"
    android:id="@+id/bottom_bar"
    />
<FrameLayout
    android:layout_width="4dp"
    android:layout_height="match_parent"
    android:background="@drawable/runded_bars"
    android:layout_marginTop="100dp"
    android:layout_marginBottom="100dp"
    android:layout_marginEnd="5dp"
    app:layout_constraintRight_toRightOf="parent"
    android:alpha=".5"
    android:elevation="100dp"
    android:outlineProvider="none"
    android:id="@+id/end_bar"
    />
<ImageView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/product_main_image"
    android:src="@drawable/iphone"
    android:layout_marginBottom="200dp"
    android:scaleType="centerCrop"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/product_info_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="38dp" />

    <FrameLayout
    android:layout_width="40dp"
    android:layout_height="4dp"
    android:background="@drawable/runded_bars"
    android:backgroundTint="#D3D3D3"
    app:layout_constraintLeft_toLeftOf="@id/product_info_container"
    app:layout_constraintRight_toRightOf="@id/product_info_container"
    app:layout_constraintTop_toTopOf="@id/product_info_container"
    android:elevation="2dp"
    android:outlineProvider="none"
    android:layout_margin="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="iPhone 11 Pro Max"
        android:id="@+id/product_info_headline"
        app:layout_constraintTop_toTopOf="@id/product_info_container"
        android:outlineProvider="none"
        android:elevation="2dp"
        android:padding="15dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/black"
        android:background="@drawable/border_bottom"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:gravity="center"
        android:text="th@One"
        android:fontFamily="sans-serif-black"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toLeftOf="@id/buy_button"
        app:layout_constraintTop_toTopOf="@id/buy_button"
        app:layout_constraintBottom_toBottomOf="@id/buy_button"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:outlineProvider="none"/>
    <TextView
        android:id="@+id/buy_button"
        android:textSize="16sp"
        android:textColor="#00CCFF"
        android:text="Buy on Amazon"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_one"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"

        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:elevation="2dp"
        android:outlineProvider="none"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¬1,299.99"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:textColor="#820000"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@id/end_bar"
        app:layout_constraintTop_toBottomOf="@id/product_info_headline"
        android:elevation="10dp"
        android:outlineProvider="none"
        android:id="@+id/pruduct_info_price_new"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_info_description_headline"
        android:text="Description"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/pruduct_info_price_new"
        app:layout_constraintTop_toTopOf="@id/pruduct_info_price_new"
        android:elevation="10dp"
        android:outlineProvider="none"
        android:paddingStart="15dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_info_description_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/product_info_description_headline"
        android:elevation="10dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:outlineProvider="none"
        android:text="Some Description of the Product and what it is"
        />

</androidx.constraintlayout.widget.ConstraintLayout>